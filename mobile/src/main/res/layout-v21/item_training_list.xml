<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/standard_nano_dimension"
    android:layout_marginLeft="@dimen/standard_nano_dimension"
    android:layout_marginRight="@dimen/standard_nano_dimension"
    android:layout_marginTop="@dimen/standard_micro_dimension"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/standard_mini_dimension"
    app:cardElevation="@dimen/standard_nano_dimension"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_dimension"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <FrameLayout
            android:id="@+id/prepare_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/standard_mini_dimension"
            android:paddingLeft="@dimen/standard_dimension"
            android:paddingRight="@dimen/standard_dimension"
            android:paddingTop="@dimen/standard_mini_dimension">

            <TextView
                android:id="@+id/prepare_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_directions_walk_black_18dp"
                android:drawablePadding="@dimen/standard_sub_dimension"
                android:drawableStart="@drawable/ic_directions_walk_black_18dp"
                android:text="@string/training_prepare"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/prepare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/rep_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/standard_mini_dimension" />

        <FrameLayout
            android:id="@+id/cooldown_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/standard_sub_dimension"
            android:paddingLeft="@dimen/standard_dimension"
            android:paddingRight="@dimen/standard_dimension"
            android:paddingTop="@dimen/standard_mini_dimension">

            <TextView
                android:id="@+id/cooldown_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_restore_black_18dp"
                android:drawablePadding="@dimen/standard_sub_dimension"
                android:drawableStart="@drawable/ic_restore_black_18dp"
                android:text="@string/training_cooldown"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/cooldown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textStyle="bold" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/opaqueBlackLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:id="@+id/edit"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_edit" />

            <Button
                android:id="@+id/delete"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_delete" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/standard_mini_dimension"
        android:layout_height="match_parent" />
</android.support.v7.widget.CardView>